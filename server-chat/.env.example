# Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb+srv://<YOUR_MONGO_USER>:<YOUR_MONGO_PASSWORD>@<YOUR_CLUSTER>.mongodb.net/<YOUR_DB_NAME>?retryWrites=true&w=majority

# Client URL for CORS and Socket.IO
CLIENT_URL=http://localhost:3000
SOCKET_IO_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=<YOUR_JWT_SECRET_KEY_HERE>
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=<YOUR_JWT_REFRESH_SECRET_KEY_HERE>
JWT_REFRESH_EXPIRE=30d

# Redis (optional for Socket.IO adapter and scaling)
REDIS_URL=redis://localhost:6379

# Storage Provider (local, cloudinary, or s3)
STORAGE_PROVIDER=local
# CLOUDINARY_NAME=<YOUR_CLOUDINARY_NAME>
# CLOUDINARY_API_KEY=<YOUR_CLOUDINARY_API_KEY>
# CLOUDINARY_API_SECRET=<YOUR_CLOUDINARY_API_SECRET>
# AWS_S3_BUCKET=<YOUR_S3_BUCKET_NAME>
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=<YOUR_AWS_KEY>
# AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET>

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_EMAIL@gmail.com>
SMTP_PASSWORD=<YOUR_EMAIL_APP_PASSWORD>
SMTP_FROM=noreply@zoqira.com

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
