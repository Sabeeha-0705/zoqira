# Server configuration
PORT=5001
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/server-communication?retryWrites=true&w=majority
CLIENT_URL=http://localhost:3000

# JWT
JWT_SECRET=<JWT_SECRET_HERE>
JWT_EXPIRE=7d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=<SMTP_PASSWORD_HERE>
EMAIL_FROM=no-reply@example.com

# Speech / AI keys (placeholders)
# Either WHISPER/OpenAI or Google Speech
WHISPER_KEY=<OPENAI_API_KEY_HERE>
GOOGLE_CLOUD_SPEECH_KEY=<GOOGLE_SPEECH_KEY_HERE>

# TTS provider: elevenlabs | google | azure
TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=<ELEVENLABS_API_KEY_HERE>
GOOGLE_TTS_KEY=<GOOGLE_TTS_KEY_HERE>
OPENAI_API_KEY=<OPENAI_API_KEY_HERE>

# Storage provider: none | s3 | cloudinary
STORAGE_PROVIDER=none
AWS_S3_BUCKET=<AWS_S3_BUCKET_HERE>
AWS_ACCESS_KEY_ID=<AWS_ACCESS_KEY_ID_HERE>
AWS_SECRET_ACCESS_KEY=<AWS_SECRET_ACCESS_KEY_HERE>

# Other
NODE_ENV=development
