# Server
PORT=5000

# Database
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/DBNAME

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_here
REFRESH_EXPIRES=30d

# Clients
CLIENT_URL=http://localhost:5173
MOBILE_CLIENT_URL=http://localhost:19006

# Admin / notification email (comma-separated)
ADMIN_EMAILS=admin@example.com

# SMTP (Gmail example using app password or OAuth2)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-user@example.com
SMTP_PASS=your-smtp-password-or-app-password
# Optional OAuth2 settings (preferred for Gmail in production)
# SMTP_OAUTH_CLIENT_ID=
# SMTP_OAUTH_CLIENT_SECRET=
# SMTP_OAUTH_REFRESH_TOKEN=
# SMTP_OAUTH_ACCESS_TOKEN=

# Optional transport flags
SMTP_SECURE=false
SMTP_REQUIRE_TLS=true

# From address used in emails (fallback to SMTP_USER if not set)
EMAIL_FROM=no-reply@example.com
